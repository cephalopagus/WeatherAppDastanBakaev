<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg_style"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="40dp">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/location"
            android:layout_marginRight="10dp">
        </ImageView>
        <EditText
            android:id="@+id/location_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_regular"
            android:text="Bishkek"
            android:textColor="#292D31"
            android:textSize="25dp"
            android:textStyle="bold"
            android:background="@null">
        </EditText>
    </LinearLayout>
    <ImageView
        android:id="@+id/weather_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/sun_light"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">
    </ImageView>
    <TextView
        android:fontFamily="@font/comfortaa_regular"
        android:id="@+id/weather_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunny"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#292D31">
    </TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/weather_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24"
            android:textColor="#292D31"
            android:textSize="50dp"
            android:fontFamily="@font/comfortaa_regular">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="°"
            android:textColor="#292D31"
            android:textSize="30dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="C"
            android:textColor="#292D31"
            android:textSize="30dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/general_style"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="vertical"
                style="@style/info_left"
                android:background="@drawable/info_style">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/sunrise_light"></ImageView>
                <TextView
                    android:id="@+id/sunrise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="05:17"
                    android:textColor="#292D31"
                    android:textSize="18dp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="Sunrise">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                style="@style/info_center"
                android:background="@drawable/info_style">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/sunset_light"></ImageView>
                <TextView
                    android:id="@+id/sunset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="21:12"
                    android:textColor="#292D31"
                    android:textSize="18dp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="Sunset">
                </TextView>


            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                style="@style/info_center"
                android:background="@drawable/info_style">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/heavy_snowfall_light"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="20°C"
                    android:textColor="#292D31"
                    android:textSize="18dp">
                </TextView>
                <TextView
                    android:id="@+id/feels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="Feels">
                </TextView>


            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                style="@style/info_right"
                android:background="@drawable/info_style">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/drop_light"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="48%"
                    android:textColor="#292D31"
                    android:textSize="18dp">
                </TextView>
                <TextView
                    android:id="@+id/humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="Humidity">
                </TextView>
            </LinearLayout>
        </LinearLayout>







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="vertical"
                style="@style/info_left_1"
                android:background="@drawable/info_style">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/heavy_rain_light"></ImageView>
                <TextView
                    android:id="@+id/chance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="45%"
                    android:textColor="#292D31"
                    android:textSize="18dp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="Chance">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                style="@style/info_center_1"
                android:background="@drawable/info_style">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/sunset_light"></ImageView>
                <TextView
                    android:id="@+id/pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="10mBar"
                    android:textColor="#292D31"
                    android:textSize="18dp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="Pressure">
                </TextView>


            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                style="@style/info_center_1"
                android:background="@drawable/info_style">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/heavy_wind_light"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="24:30"
                    android:textColor="#292D31"
                    android:textSize="18dp">
                </TextView>
                <TextView
                    android:id="@+id/wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="Wind">
                </TextView>


            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                style="@style/info_right_1"
                android:background="@drawable/info_style">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/sun_light"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="4"
                    android:textColor="#292D31"
                    android:textSize="18dp">
                </TextView>
                <TextView
                    android:id="@+id/uv_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="UV index">
                </TextView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>






</LinearLayout>